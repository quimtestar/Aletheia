<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="jar">
    <import file="build.xml"/>
    <target depends="build" name="jar">
        <jar destfile="berkeleydb.aletheia.tool.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="aletheia.persistence.berkeleydb.BerkeleyDBAletheiaTool"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="bin"/>
            <fileset dir="${Aletheia.Base.location}/bin"/>
            <fileset dir="${Aletheia.log4j.location}/bin"/>
            <fileset dir="${Aletheia.Utilities.location}/bin"/>
            <fileset dir="${Aletheia.Security.location}/bin"/>
            <fileset dir="${Aletheia.Protocol.location}/bin"/>
            <fileset dir="${Aletheia.Version.location}/bin"/>
            <zipfileset excludes="META-INF/*.SF" src="je-6.4.25.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${Aletheia.log4j.location}/log4j-api-2.5.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${Aletheia.log4j.location}/log4j-core-2.5.jar"/>
        </jar>
    </target>
</project>

