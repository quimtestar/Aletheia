<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="jar">
    <import file="build.xml"/>
    <target depends="build" name="jar">
        <jar destfile="aletheiagui.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="aletheia.gui.app.AletheiaGUI"/>
                <attribute name="Class-Path" value="."/>
            	<attribute name="SplashScreen-Image" value="aletheia/gui/app/splash.png" />
            </manifest>
            <fileset dir="${Aletheia.Base.location}/bin"/>
            <fileset dir="${Aletheia.ParserGenerator.location}/bin"/>
            <fileset dir="${Aletheia.log4j.location}/bin"/>
            <fileset dir="${Aletheia.BerkeleyDB.location}/bin"/>
            <fileset dir="${Aletheia.Utilities.location}/bin"/>
            <fileset dir="${Aletheia.PdfExport.location}/bin"/>
            <fileset dir="${Aletheia.ProofFinder.location}/bin"/>
            <fileset dir="${Aletheia.Security.location}/bin"/>
            <fileset dir="${Aletheia.PeerToPeer.location}/bin"/>
            <fileset dir="${Aletheia.GUI.Fonts.location}/bin"/>
            <fileset dir="${Aletheia.Protocol.location}/bin"/>
            <fileset dir="${Aletheia.Version.location}/bin"/>
            <fileset dir="bin"/>
            <zipfileset excludes="META-INF/*.SF" src="${Aletheia.BerkeleyDB.location}/je-7.5.11.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${Aletheia.log4j.location}/log4j-api-2.8.2.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${Aletheia.log4j.location}/log4j-core-2.8.2.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${Aletheia.PdfExport.location}/itext5-itextpdf-5.5.12.jar"/>
        </jar>
    </target>
	<target depends="build" name="console">
        <jar destfile="aletheiacliconsole.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="aletheia.gui.app.AletheiaCliConsole"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${Aletheia.Base.location}/bin"/>
            <fileset dir="${Aletheia.ParserGenerator.location}/bin"/>
            <fileset dir="${Aletheia.log4j.location}/bin"/>
            <fileset dir="${Aletheia.BerkeleyDB.location}/bin"/>
            <fileset dir="${Aletheia.Utilities.location}/bin"/>
            <fileset dir="${Aletheia.PdfExport.location}/bin"/>
            <fileset dir="${Aletheia.ProofFinder.location}/bin"/>
            <fileset dir="${Aletheia.Security.location}/bin"/>
            <fileset dir="${Aletheia.PeerToPeer.location}/bin"/>
            <fileset dir="${Aletheia.GUI.Fonts.location}/bin"/>
            <fileset dir="${Aletheia.Protocol.location}/bin"/>
            <fileset dir="${Aletheia.Version.location}/bin"/>
            <fileset dir="bin"/>
            <zipfileset excludes="META-INF/*.SF" src="${Aletheia.BerkeleyDB.location}/je-7.5.11.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${Aletheia.log4j.location}/log4j-api-2.8.2.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${Aletheia.log4j.location}/log4j-core-2.8.2.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${Aletheia.PdfExport.location}/itext5-itextpdf-5.5.12.jar"/>
        </jar>
    </target>
</project>

