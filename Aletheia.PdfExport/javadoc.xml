<project default="javadoc">
	<import file="../Aletheia.Base/javadoc_properties.xml"/>
    <target name="javadoc">
        <javadoc 
        	access="${access}" 
        	author="${author}" 
        	classpath="${classpath}" 
        	destdir="${destdir}" 
        	nodeprecated="${nodeprecated}" 
        	nodeprecatedlist="${nodeprecatedlist}" 
        	noindex="${noindex}" 
        	nonavbar="${nonavbar}" 
        	notree="${notree}"  
        	sourcepath="${sourcepath}" 
        	splitindex="${splitindex}" 
        	use="${use}" 
        	version="${version}" 
        	encoding="${encoding}" 
        	docencoding="${docencoding}" 
        	charset="${charset}"
        >
            <link href="http://docs.oracle.com/javase/7/docs/api/"/>
            <link href="http://api.itextpdf.com/itext/"/>
            <link href="http://api.itextpdf.com/xtra/"/>
            <link href="../${Aletheia.Base.location}/doc/"/>
            <link href="../${Aletheia.Utilities.location}/doc/"/>
            <link href="../${Aletheia.BerkeleyDB.location}/doc/"/>
        </javadoc>
    </target>
</project>

