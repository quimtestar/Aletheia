<?xml version="1.0" encoding="UTF-8"?>
<Configuration shutdownHook="disable">
  <Appenders>
    <Console name="stdout" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ISO8601}{UTC} %d{zzz}{UTC} [%t] %-5p %c - %m%n"/>
    </Console>
<!--
    <RollingFile name="file" fileName="aletheia.log" filePattern="aletheia.log.%i.gz" append="true">
      <PatternLayout pattern="%d{ISO8601}{UTC} %d{zzz}{UTC} [%t] %-5p %c - %m%n"/>
      <Policies>
        <SizeBasedTriggeringPolicy size="1 GB"/>
      </Policies>
      <DefaultRolloverStrategy max="0"/>
    </RollingFile>
-->
    <File name="file" fileName="aletheia.log" append="false">
      <PatternLayout pattern="%d{ISO8601}{UTC} %d{zzz}{UTC} [%t] %-5p %c - %m%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Logger name="aletheia" level="trace"/>
    <Root level="debug">
      <AppenderRef ref="file"/>
      <AppenderRef ref="stdout"/>
    </Root>
  </Loggers>
</Configuration>
